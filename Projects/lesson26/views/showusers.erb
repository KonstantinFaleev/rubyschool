<h1>Просмотр заказов</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Дата записи</th>
      <th scope="col">Парикмахер</th>
      <th scope="col">Цвет волос</th>
    </tr>
  </thead>
  <tbody>
  <% @results.each do |row| %>
      <tr>
        <th scope="row"><%= row['id'] %></th>
        <td><%= row['username'] %></td>
        <td><%= row['phone'] %></td>
        <td><%= row['datestamp'] %></td>
        <td><%= row['barber'] %></td>
        <td><%= row['color'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>
